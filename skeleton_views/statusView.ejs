<!DOCTYPE html>
<html lang="en">

<head>
    <title>SignUp</title>
    <style>
    </style>
</head>

<body>
    <%- include('../views/scripts') -%>
        <div class="box">
            <%- include('./components/navbar') -%>
                <h1>my status</h1>
                <div>
                    <div>
                        <h2>Record</h2>
                        <% if(histories.length> 10) histories.length = 10; %>
                            <% for (var i=0; i < histories.length; i++) { %>
                                    <a>
                                        Winner : <%= histories[i].player1 %>,
                                        Loser : <%= histories[i].player2 %>,
                                        Score : <%= histories[i].score %>
                                    </a>
                    </div>
                    <% } %>
                        <div>
                            <h2>versus win rate</h2>
                            <% for (var i=0; i < users.length; i++) { %>
                                <a>
                                    Player : <%= users[i].username %> :
                                        Rate : <%= ((users[i].win / (users[i].win + users[i].defeat)) * 100).toFixed(0)
                                            %>%
                                </a>
                        </div>
                        <% } %>
                </div>
        </div>
</body>

</html>