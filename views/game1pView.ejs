<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tetris</title>
    <link rel="stylesheet" href="/style/defaultStyle.css">
    <style>
        div {
            text-align: center;
        }

        .score {
            position: relative;
            font-size: 24px;
            margin-bottom: 1rem;

        }

        .level {
            position: relative;
            font-size: 24px;
            margin-bottom: 1rem;
        }

        p {
            text-align: center;
            font-size: 18px;
            margin-top: 15rem;
            margin-bottom: 15rem;
        }

        button {
            font-size: 18px;
            margin-bottom: 1rem;
        }
    </style>
</head>

<body>
    <div>
            
    <!-- score -->
    <div id="score_check"> <span id="player_score">0</span></div>


    <!-- canvas -->
    <div id="player">
        <canvas id="player_board" width="500" height="1200"></canvas>
        <canvas id="player_animated" width="500" height="1200"></canvas>
        <canvas id="player_shadow" width="500" height="1200"></canvas>
    </div>


    <!-- pause -->
    <div id="instructions" style="position: relative">
        <div id='controls' style="float: left">
            <input type="button" onclick="if (TETRIS.isPaused()) { TETRIS.unPause(); } else { TETRIS.setPause(); }" value="Pause" style="font-size: 150%">
        </div>
    </div>
    </div>
</body>

</html>
